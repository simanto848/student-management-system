<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="au theme template">
    <meta name="author" content="Hau Nguyen">
    <meta name="keywords" content="au theme template">

    <!-- Title Page-->
    <title>Add Teacher</title>
    <%- include ('../../common/css.ejs') %>

</head>

<body class="animsition">
    <div class="page-wrapper">
        <!-- HEADER MOBILE-->
        <%- include ('../../common/header_mobile.ejs') %>
        <!-- END HEADER MOBILE-->

        <!-- MENU SIDEBAR-->
        <%- include ('../../common/sidebar.ejs') %>
        <!-- END MENU SIDEBAR-->

        <!-- PAGE CONTAINER-->
        <div class="page-container">
            <!-- HEADER DESKTOP-->
            <%- include ('../../common/header_desktop.ejs') %>
            <!-- HEADER DESKTOP-->

            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-header">Teacher</div>
                                    <div class="card-body">
                                        <% if (alertMessage) { %>
                                            <div class="alert alert-info alert-dismissible fade show" role="alert">
                                                <strong><%= alertMessage %></strong>
                                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                    <span aria-hidden="true">Ã—</span>
                                                </button>
                                            </div>
                                        <% } %>
                                        <div class="card-title">
                                            <h3 class="text-center title-2">Add Teacher</h3>
                                        </div>
                                        <hr>
                                        <% for (let teacher of teachers) { %>
                                        <form action="/admin/teachers/edit/<%= teacher.id %>" method="post" novalidate="novalidate">
                                            <div class="form-group has-success">
                                                <label for="name" class="control-label mb-1">Name</label>
                                                <input id="name" name="name" type="text" class="form-control valid" value="<%= teacher.name %>">
                                            </div>
                                            <div class="form-group has-success">
                                                <label for="name" class="control-label mb-1">Email</label>
                                                <input id="email" name="email" type="email" class="form-control valid" value="<%= teacher.email %>">
                                            </div>
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="select" class=" form-control-label">Select Faculty</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <select name="faculty_id" id="faculty_id" class="form-control">
                                                        <% for (let faculty of faculties) { %>
                                                            <% if (teacher.id === faculty.id) { %>
                                                                <option value="<%= faculty.id %>" selected><%= faculty.short_name %></option>
                                                            <% } else { %>
                                                                <option value="<%= faculty.id %>"><%= faculty.short_name %></option>
                                                            <% } %>
                                                        <% } %>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="select" class=" form-control-label">Select Department</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <select name="department_id" id="department_id" class="form-control">
                                                        <% for (let department of departments) { %>
                                                            <% if (teacher.id === department.id) { %>
                                                                <option value="<%= department.id %>" selected><%= department.short_name %></option>
                                                            <% } else { %>
                                                                <option value="<%= department.id %>"><%= department.short_name %></option>
                                                            <% } %>
                                                        <% } %>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="select" class=" form-control-label">Select Designation</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <select name="role" id="role" class="form-control">
                                                        <% for (let role of teacher_rolls) { %>
                                                            <% if (teacher.id === role.id) { %>
                                                                <option class="text-uppercase" value="<%= role.title%>" selected><%= role.title%></option>
                                                            <% } else { %>
                                                                <option class="text-uppercase" value="<%= role.title%>"><%= role.title%></option>
                                                            <% } %>
                                                        <% } %>
                                                    </select>
                                                </div>
                                            </div>
                                            <div>
                                                <button id="button" type="submit" class="btn btn-lg btn-info btn-block">ADD</button>
                                            </div>
                                        </form>
                                        <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <%- include ('../../common/footer.ejs') %>
            </div>
        </div>
    </div>
</div>
<%- include ('../../common/js.ejs') %>

</body>

</html>
<!-- end document-->
