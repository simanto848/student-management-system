<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="au theme template">
    <meta name="author" content="Hau Nguyen">
    <meta name="keywords" content="au theme template">

    <!-- Title Page-->
    <title>Add Teacher</title>

    {{> css}}

</head>

<body class="animsition">
    <div class="page-wrapper">
        <!-- HEADER MOBILE-->
        {{> header_mobile}}
        <!-- END HEADER MOBILE-->

        <!-- MENU SIDEBAR-->
        {{> sidebar}}
        <!-- END MENU SIDEBAR-->

        <!-- PAGE CONTAINER-->
        <div class="page-container">
            <!-- HEADER DESKTOP-->
            {{> header_desktop}}
            <!-- HEADER DESKTOP-->

            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-header">Teacher</div>
                                    <div class="card-body">
                                        {{#if alertMessage}}
                                            <div class="alert alert-info alert-dismissible fade show" role="alert">
                                                <strong>{{alertMessage}}</strong>
                                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                    <span aria-hidden="true">Ã—</span>
                                                </button>
                                            </div>
                                        {{/if}}
                                        <div class="card-title">
                                            <h3 class="text-center title-2">Add Teacher</h3>
                                        </div>
                                        <hr>
                                        {{#each teachers}}
                                        <form action="/admin/teachers/edit/{{id}}" method="post" novalidate="novalidate">
                                            <div class="form-group has-success">
                                                <label for="name" class="control-label mb-1">Name</label>
                                                <input id="name" name="name" type="text" class="form-control valid" value="{{name}}">
                                            </div>
                                            <div class="form-group has-success">
                                                <label for="name" class="control-label mb-1">Email</label>
                                                <input id="email" name="email" type="email" class="form-control valid" value="{{email}}">
                                            </div>
                                        {{/each}}
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="select" class=" form-control-label">Select Faculty</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <select name="faculty_id" id="faculty_id" class="form-control">
                                                        {{#each faculties}}
                                                            <option value="{{id}}">{{short_name}}</option>
                                                        {{/each}}
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="select" class=" form-control-label">Select Department</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <select name="department_id" id="department_id" class="form-control">
                                                        {{#each departments}}
                                                            <option value="{{id}}">{{short_name}}</option>
                                                        {{/each}}
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="select" class=" form-control-label">Select Designation</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <select name="role" id="role" class="form-control">
                                                        {{#each teacher_rolls}}
                                                            <option class="text-uppercase" value="{{title}}">{{title}}</option>
                                                        {{/each}}
                                                    </select>
                                                </div>
                                            </div>
                                            <div>
                                                <button id="button" type="submit" class="btn btn-lg btn-info btn-block">ADD</button>
                                            </div>
                                        </form>
                            </div>
                        </div>
                    </div>
                </div>
                {{> footer}}
            </div>
        </div>
    </div>

{{> js}}

</body>

</html>
<!-- end document-->
