<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="au theme template">
    <meta name="author" content="Hau Nguyen">
    <meta name="keywords" content="au theme template">

    <!-- Title Page-->
    <title>Courses</title>

    {{> css}}

</head>

<body class="animsition">
    <div class="page-wrapper">
        <!-- HEADER MOBILE-->
        {{> header_mobile}}
        <!-- END HEADER MOBILE-->

        <!-- MENU SIDEBAR-->
        {{> sidebar}}
        <!-- END MENU SIDEBAR-->

        <!-- PAGE CONTAINER-->
        <div class="page-container">
            <!-- HEADER DESKTOP-->
            {{> header_desktop}}
            <!-- END HEADER DESKTOP-->

            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12">
                                <!-- DATA TABLE -->
                                <h3 class="title-5 m-b-35">Courses</h3>
                                <div class="table-data__tool float-right">
                                    <a href="/admin/courses/add">
                                        <button class="au-btn au-btn-icon au-btn--green au-btn--small">
                                        <i class="zmdi zmdi-plus"></i>Add Course</button>
                                    </a>
                                </div>
                                <div class="table-responsive table-responsive-data2">
                                    <table class="table table-data2">
                                        <thead>
                                            <tr>
                                                <th>Course Title</th>
                                                <th>Course Code</th>
                                                <th>Semester</th>
                                                <th>Department</th>
                                                <th>Maintainable</th>
                                                <th>Created At</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each courseInfo}}
                                            <tr class="tr-shadow">
                                                <td> {{code}} </td>
                                                <td> {{title}} </td>
                                                <td> {{semester}} </td>
                                                <td> {{department_name}} </td>
                                                <td> {{maintainable}} </td>
                                                <td>{{dateFormat created_at "DD-MM-Y"}}</td>
                                                <td>
                                                    <div class="table-data-feature">
                                                        <a href="/admin/courses/edit/{{id}}">
                                                            <button class="item" data-toggle="tooltip" data-placement="top" title="Edit">
                                                                <i class="zmdi zmdi-edit"></i>
                                                            </button>
                                                        </a>
                                                        <button class="item ml-2 delete-course-btn" data-toggle="tooltip" data-placement="top" title="Delete" data-course-id="{{id}}">
                                                            <i class="zmdi zmdi-delete"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                            <tr class="spacer"></tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                                <!-- END DATA TABLE -->
                            </div>
                        </div>
                        {{> footer}}
                    </div>
                </div>
            </div>
        </div>

    </div>

    {{> js}}

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Select all delete buttons by class
            const deleteButtons = document.querySelectorAll(".delete-course-btn");

            // Add a click event listener to each delete button
            deleteButtons.forEach(button => {
                button.addEventListener("click", async function () {
                    // Get the faculty ID from the button's data-faculty-id attribute
                    const courseId = button.getAttribute("data-course-id");

                    // Show SweetAlert confirmation
                    const result = await swal("Are you sure you want to delete this faculty?", {
                        buttons: ["Cancel", true],
                    });

                    // If the user clicks "OK" in the SweetAlert confirmation
                    if (result) {
                        // Perform the deletion by redirecting to the delete route
                        window.location.href = `/admin/courses/delete/${courseId}`;
                    }
                });
            });
        });
    </script>

</body>

</html>
<!-- end document-->
