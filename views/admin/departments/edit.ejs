<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="au theme template">
    <meta name="author" content="Hau Nguyen">
    <meta name="keywords" content="au theme template">

    <!-- Title Page-->
    <title>Forms</title>

    <%- include ('../../common/css.ejs') %>

</head>

<body class="animsition">
    <div class="page-wrapper">
        <!-- HEADER MOBILE-->
        <%- include ('../../common/header_mobile.ejs') %>
        <!-- END HEADER MOBILE-->

        <!-- MENU SIDEBAR-->
        <%- include ('../../common/sidebar.ejs') %>
        <!-- END MENU SIDEBAR-->

        <!-- PAGE CONTAINER-->
        <div class="page-container">
            <!-- HEADER DESKTOP-->
            <%- include ('../../common/header_desktop.ejs') %>
            <!-- HEADER DESKTOP-->

            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <% if (alertMessage) { %>
                                <div class="alert alert-info" role="alert">
                                    <%= alertMessage %>
                                </div>
                        <% } %>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-header">Departments</div>
                                    <div class="card-body">
                                        <div class="card-title">
                                            <h3 class="text-center title-2">Add Department</h3>
                                        </div>
                                        <hr>
                                        <% if (department) { %>
                                        <form action="/admin/departments/edit/<%= department.id %>" method="post" novalidate="novalidate">
                                            <div class="form-group has-success">
                                                <label for="name" class="control-label mb-1">Depatment Name</label>
                                                <input id="short_name" name="short_name" type="text" class="form-control valid" value="<%= department.short_name %>">
                                            </div>
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="select" class=" form-control-label">Select Faculty</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <select name="faculty_id" id="faculty_id" class="form-control">
                                                        <% for (let faculty of faculties) { %>
                                                        <% if (department.faculty_id == faculty.id) { %>
                                                            <option value="<%= faculty.id %>" selected><%= faculty.short_name %></option>
                                                        <% } else { %>
                                                            <option value="<%= faculty.id %>"><%= faculty.short_name %></option>
                                                            <% } %>
                                                        <% } %>
                                                    </select>
                                                </div>
                                            </div>
                                            <div>
                                                <button id="button" type="submit" class="btn btn-lg btn-info btn-block">Update</button>
                                            </div>
                                        </form>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <%- include ('../../common/footer.ejs') %>
                    </div>
                </div>
            </div>
        </div>

    </div>

<%- include ('../../common/js.ejs') %>

</body>

</html>
<!-- end document-->
