<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="au theme template">
    <meta name="author" content="Hau Nguyen">
    <meta name="keywords" content="au theme template">

    <!-- Title Page-->
    <title>Add Session Courses</title>
    <!-- CSS-->
    <%- include ('../../common/css.ejs') %>
    <!-- CSS END-->

</head>

<body class="animsition">
    <div class="page-wrapper">
        <!-- HEADER MOBILE-->
        <%- include ('../../common/header_mobile.ejs') %>
        <!-- END HEADER MOBILE-->

        <!-- MENU SIDEBAR-->
        <%- include ('../../common/sidebar.ejs') %>
        <!-- END MENU SIDEBAR-->

        <!-- PAGE CONTAINER-->
        <div class="page-container">
            <!-- HEADER DESKTOP-->
            <%- include ('../../common/header_desktop.ejs') %>
            <!-- HEADER DESKTOP-->

            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <% if (alertMessage && alertMessage.length) { %>
                            <div class="alert alert-info alert-dismissible fade show" role="alert">
                                <strong><%= alertMessage %></strong>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">Ã—</span>
                                </button>
                            </div>
                        <% } %>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-header">Session Courses</div>
                                    <div class="card-body">
                                        <div class="card-title">
                                            <h3 class="text-center title-2">Add Session Courses</h3>
                                        </div>
                                        <hr>
                                        <% if(student) { %>
                                        <form action="/admin/students/edit/<%= student.id %>" method="post" novalidate="novalidate">
                                            <div class="form-group">
                                                <label for="name" class="control-label mb-1">Name</label>
                                                <input id="name" name="name" type="text" class="form-control valid" value="<%= student.name %>">
                                            </div>
                                            <div class="form-group">
                                                <label for="registration_no" class="control-label mb-1">Registration Number</label>
                                                <input id="registration_no" name="registration_no" type="text" class="form-control valid" value="<%= student.registration_no %>">
                                            </div>
                                            <div class="form-group">
                                                <label for="roll_no" class="control-label mb-1">Roll Number</label>
                                                <input id="roll_no" name="roll_no" type="text" class="form-control valid" value="<%= student.roll_no %>">
                                            </div>
                                            <div class="form-group">
                                                <label for="phone_no" class="control-label mb-1">Phone Number</label>
                                                <input id="phone_no" name="phone_no" type="text" class="form-control valid" value="<%= student.phone_no %>">
                                            </div>
                                            <div class="form-group">
                                                <label for="email" class="control-label mb-1">Email</label>
                                                <input id="email" name="email" type="email" class="form-control valid" value="<%= student.email %>">
                                            </div>
                                            <div class="form-group">
                                                <label for="course_fee" class="control-label mb-1">Course Fee</label>
                                                <input id="course_fee" name="course_fee" type="text" class="form-control valid" value="<%= student.course_fee %>">
                                            </div>
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="select" class=" form-control-label">Select Department</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <select name="department_id"  id="department_id" class="form-control">
                                                        <option>Please select department</option>
                                                        <% for (let department of departments) { %>
                                                            <% if(student.department_id === department.id) { %>
                                                            <option class="text-uppercase" value="<%= department.id %>" selected><%= department.short_name %></option>
                                                            <% } else { %>
                                                                <option class="text-uppercase" value="<%= department.id %>"><%= department.short_name %></option>
                                                            <% } %>
                                                        <% } %>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="select" class=" form-control-label">Select Session</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <select name="session_id" id="session_id" class="form-control">
                                                        <option>Please select session</option>
                                                        <% for (let session of sessions) { %>
                                                            <% if(student.session_id === session.id) { %>
                                                            <option class="text-uppercase" value="<%= session.id %>" selected><%= session.batch_no %></option>
                                                            <% } else { %>
                                                                <option class="text-uppercase" value="<%= session.id %>"><%= session.batch_no %></option>
                                                            <% } %>
                                                        <% } %>
                                                    </select>
                                                </div>
                                            </div>
                                            
                                            <div>
                                                <button id="button" type="submit" class="btn btn-lg btn-info btn-block">Update Student</button>
                                            </div>
                                        </form>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Footer -->
                        <%- include ('../../common/footer.ejs') %>
                        <!-- FOOTER END -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- SCRIPT -->
    <%- include ('../../common/js.ejs')  %>
    <!-- SCRIPT END -->



</body>
</html>
<!-- end document-->
