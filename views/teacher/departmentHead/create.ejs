<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="au theme template">
    <meta name="author" content="Hau Nguyen">
    <meta name="keywords" content="au theme template">

    <!-- Title Page-->
    <title>Add Course Teacher</title>
    <%- include('../../common/css.ejs') %>
</head>

<body class="animsition">
<div class="page-wrapper">
    <!-- HEADER MOBILE-->
    <%- include ('../../common/header_mobile.ejs') %>
    <!-- END HEADER MOBILE-->

    <!-- MENU SIDEBAR-->
    <%- include ('../../common/sidebar.ejs') %>
    <!-- END MENU SIDEBAR-->

    <!-- PAGE CONTAINER-->
    <div class="page-container">
        <!-- HEADER DESKTOP-->
        <%- include ('../../common/header_desktop.ejs') %>
        <!-- END HEADER DESKTOP-->

        <!-- MAIN CONTENT-->
        <div class="main-content">
            <div class="section__content section__content--p30">
                <div class="container-fluid">
                    <% if (alertMessage && alertMessage.length) { %>
                            <div class="alert alert-info alert-dismissible fade show" role="alert">
                                <strong><%= alertMessage %></strong>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">Ã—</span>
                                </button>
                            </div>
                    <% } %>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-header">Departments</div>
                                <div class="card-body">
                                    <div class="card-title">
                                        <h3 class="text-center title-2">Add Department</h3>
                                    </div>
                                    <hr>
                                    <form action="/teacher/department-head/add-course-teacher" method="post" novalidate="novalidate">
                                        <div class="row form-group">
                                            <div class="col col-md-3">
                                                <label for="select" class=" form-control-label">Select Session</label>
                                            </div>
                                            <div class="col-12 col-md-9">
                                                <select onchange="getCoursesBySession(this)" name="faculty_id" id="faculty_id" class="form-control">
                                                    <option>Please select session</option>
                                                    <% for (let session of sessions) { %>
                                                        <option value="<%= session.id %>">Session: <%= session.session %> Semester: <%= session.semester %> Batch: <%= session.batch_no %></option>
                                                    <% } %>
                                                </select>
                                            </div>
                                            <div class="table-responsive table-responsive-data2">
                                                <table class="table table-data2">
                                                    <thead>
                                                        <tr>
                                                            <th>SL</th>
                                                            <th>Course Code</th>
                                                            <th>Course Title</th>
                                                            <th>Assigned Teacher</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody id="table_body_container">
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>

                                        <div>
                                            <button id="button" type="submit" class="btn btn-lg btn-info btn-block">ADD</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <%- include ('../../common/footer.ejs') %>
                </div>
            </div>
        </div>
        <!-- END MAIN CONTENT-->
    </div>
</div>
<%- include ('../../common/js.ejs') %>

<script>

    async function getCoursesBySession(e) {
        const tableContainer = document.getElementById('table_body_container');
        tableContainer.innerHTML = null;
        const response = await fetch(`/admin/sessions/${e.value}/courses`);
        const { success, message, data } = await response.json();
        if(!success) {
            alert(message)
        } else {
            data.forEach((item, index) => {
                const trElement = appendTableRow(index, item);
                tableContainer.appendChild(trElement);
            });
        }
    }

    function appendTableRow(index, item) {
        var trElement = document.createElement('tr');
        trElement.innerHTML = `<td>${index + 1}</td>
                            <td>${item.course_code}</td>
                            <td>${item.course_title}</td>
                            <td>${item.teacher_name !== null && item.teacher_name !== undefined && item.teacher_name !== '' ? item.teacher_name : 'Not Assigned'}</td>`
        return trElement
    }
</script>

</body>

</html>
<!-- end document-->
